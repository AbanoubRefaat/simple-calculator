<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:context=".MainActivity"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:id="@+id/relativeLayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

   <TextView
       android:id="@+id/equation_number"
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:layout_alignParentTop="true"
       android:layout_centerVertical="true"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:paddingTop="20dp"
       android:paddingEnd="25dp"
       android:gravity="end"
       android:text=""
       android:textSize="40dp" />

    <TextView
        android:id="@+id/equation_sign"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="25dp"
        android:gravity="end"
        android:text="-"
        android:textSize="40dp" />


      <LinearLayout
          android:id="@+id/first_row_buttons"
          style="@style/layout_rows"
          android:layout_below="@id/equation_number">

         <Button
             android:id="@+id/bt_ac"
             style="@style/buttons"
             android:text="AC"
             android:background="@color/colorPrimary"/>

         <Button
             android:id="@+id/bt_plus_min"
             style="@style/buttons"
             android:text="+/-"
             android:background="@color/colorPrimary"/>

         <Button
             android:id="@+id/bt_percentage"
             style="@style/buttons"
             android:text="%"
             android:background="@color/colorPrimary"
             />

         <Button
             android:background="@color/colorPrimaryDark"
             android:id="@+id/bt_div"
             style="@style/buttons"
             android:text="/"
             />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/second_row"
          style="@style/layout_rows"
          android:layout_below="@id/first_row_buttons">

         <Button
             android:id="@+id/bt_7"
             style="@style/buttons"
             android:text="7" />

         <Button
             android:id="@+id/bt_8"
             style="@style/buttons"
             android:text="8" />

         <Button
             android:id="@+id/bt_9"
             style="@style/buttons"
             android:text="9" />

         <Button
             android:id="@+id/bt_multi"
             style="@style/buttons"
             android:text="*"
             android:background="@color/colorPrimaryDark"
             />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/third_row"
          style="@style/layout_rows"
          android:layout_below="@id/second_row">

         <Button
             android:id="@+id/bt_4"
             style="@style/buttons"
             android:text="4" />

         <Button
             android:id="@+id/bt_5"
             style="@style/buttons"
             android:text="5" />

         <Button
             android:id="@+id/bt_6"
             style="@style/buttons"
             android:text="6" />

         <Button
             android:id="@+id/bt_minus"
             style="@style/buttons"
             android:text="-"
             android:background="@color/colorPrimaryDark"
             />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/forth_row"
          style="@style/layout_rows"
          android:layout_below="@id/third_row">

         <Button
             android:id="@+id/bt_1"
             style="@style/buttons"
             android:text="1" />

         <Button
             android:id="@+id/bt_2"
             style="@style/buttons"
             android:text="2" />

         <Button
             android:id="@+id/bt_3"
             style="@style/buttons"
             android:text="3" />

         <Button
             android:id="@+id/bt_plus"
             style="@style/buttons"
             android:text="+"
             android:background="@color/colorPrimaryDark"
             />


      </LinearLayout>

      <LinearLayout
          android:id="@+id/fifth_row"
          style="@style/layout_rows"
          android:layout_below="@id/forth_row">


          <Button
              android:id="@+id/bt_decimal"
              style="@style/buttons"
              android:text="."
              android:background="@color/colorPrimary"/>

          <Button
              android:id="@+id/bt_0"
              style="@style/buttons"
              android:text="0"
              android:background="@color/colorPrimary"/>

         <Button
             android:layout_weight="2"
             android:id="@+id/bt_equal"
             style="@style/buttons"
             android:text="="
             android:background="@color/colorPrimary"/>


      </LinearLayout>



   </RelativeLayout>

